<?xml version="1.0" encoding="utf-8"?>
<layout >

    <data>

        <variable
            name="child"
            type="ua.nure.havrysh.kindergarten.model.Child"></variable>
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/child_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/child_item_photo"
            android:layout_toRightOf="@+id/child_item_photo"
            android:text="@={child.name}" />

        <ImageView
            android:id="@+id/child_item_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/child"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:src="@drawable/child" />
    </RelativeLayout>
</layout>